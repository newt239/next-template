{
  "ignorePatterns": ["node_modules/", ".next/", "public/", "playwright-report/"],
  "env": {
    "es2022": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": ["eslint", "oxc", "nextjs", "react", "import", "jsx-a11y", "unicorn"],
}
