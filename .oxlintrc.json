{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "ignorePatterns": ["node_modules/", ".next/", "out/", "build/"],
  "categories": {
    "nursery": "warn",
    "pedantic": "warn",
    "perf": "warn",
    "restriction": "warn",
    "style": "warn",
    "suspicious": "warn"
  },
  "plugins": [
    "eslint",
    "typescript",
    "unicorn",
    "react",
    "react-perf",
    "nextjs",
    "oxc",
    "import",
    "jsx-a11y"
  ],
  "rules": {
    "sort-keys": "warn",
    "no-console": ["warn", { "allow": ["warn", "error"] }]
  }
}
