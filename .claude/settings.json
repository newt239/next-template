{
  "permissions": {
    "allow": [
      "Bash(mkdir:*)",
      "Bash(pnpm install:*)",
      "Bash(pnpm run:*)",
      "Bash(grep:*)",
      "Bash(gh pr create:*)"
    ],
    "ask": ["Bash(git add:*)", "Bash(git commit:*)"],
    "deny": [
      "Bash(rm:*)",
      "Bash(git push:*)",
      "Bash(git reset:*)",
      "Bash(git checkout:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": ["deepwiki", "playwright", "context7"]
}
