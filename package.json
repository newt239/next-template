{
  "name": "next-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "setup": "corepack enable pnpm",
    "preinstall": "npx only-allow pnpm",
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "pnpm run eslint && pnpm run stylelint",
    "lint:fix": "pnpm run eslint:fix && pnpm run stylelint:fix",
    "type-check": "npx tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "eslint": "eslint",
    "eslint:fix": "eslint --fix",
    "stylelint": "stylelint \"src/**/*.css\"",
    "stylelint:fix": "stylelint \"src/**/*.css\" --fix",
    "gen": "cmk"
  },
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "better-auth": "^1.3.27",
    "drizzle-orm": "^0.44.6",
    "hono": "^4.9.10",
    "nanoid": "^5.1.6",
    "next": "15.4.6",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@css-modules-kit/codegen": "0.5.0",
    "@css-modules-kit/stylelint-plugin": "0.3.2",
    "@eslint-react/eslint-plugin": "1.52.5",
    "@eslint/eslintrc": "^3.3.1",
    "@hono/zod-validator": "^0.7.3",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.7.0",
    "@types/react": "19.1.10",
    "@types/react-dom": "19.1.7",
    "@vitest/ui": "^3.2.4",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.32.0",
    "eslint-config-next": "15.4.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "0.4.20",
    "jsdom": "^27.0.0",
    "lefthook": "1.12.3",
    "stylelint": "16.23.1",
    "stylelint-config-recess-order": "7.2.0",
    "stylelint-config-standard": "39.0.0",
    "stylelint-plugin-use-baseline": "0.8.1",
    "typescript": "5.9.2",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4"
  }
}
