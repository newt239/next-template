{
  "name": "next-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "setup": "corepack enable pnpm",
    "preinstall": "npx only-allow pnpm",
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "pnpm run oxlint && pnpm run stylelint",
    "lint:fix": "pnpm run oxlint:fix && pnpm run stylelint:fix",
    "type-check": "npx tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "oxlint": "oxlint --type-aware",
    "oxlint:fix": "oxlint --fix",
    "stylelint": "stylelint \"src/**/*.css\"",
    "stylelint:fix": "stylelint \"src/**/*.css\" --fix",
    "gen": "cmk"
  },
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "better-auth": "^1.4.5",
    "drizzle-orm": "^0.45.0",
    "hono": "^4.10.7",
    "nanoid": "^5.1.6",
    "next": "16.0.7",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "server-only": "^0.0.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@css-modules-kit/codegen": "0.6.0",
    "@css-modules-kit/stylelint-plugin": "0.4.0",
    "@hono/zod-validator": "^0.7.5",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@vitest/ui": "^4.0.15",
    "drizzle-kit": "^0.31.8",
    "jsdom": "^27.2.0",
    "lefthook": "2.0.8",
    "oxlint": "^1.0.0",
    "oxlint-tsgolint": "^0.8.3",
    "stylelint": "16.26.1",
    "stylelint-config-recess-order": "7.4.0",
    "stylelint-config-standard": "39.0.1",
    "stylelint-plugin-use-baseline": "1.1.3",
    "typescript": "5.9.3",
    "vitest": "^4.0.15"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "lefthook",
      "sharp"
    ]
  }
}
